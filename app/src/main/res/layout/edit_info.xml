<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditinfoActivity">

    <Button
        android:id="@+id/editinfo_backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="뒤로가기"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.761"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/editinfo_completebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="완료"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.201"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editinfo_editTextName"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="#ffbcaf"
        android:ems="10"
        android:gravity="center"
        android:hint="닉네임 입력"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.653" />

    <TextView
        android:id="@+id/editinfo_accounttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정보 수정"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />

    <ImageView
        android:id="@+id/editinfo_setimageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#ccc"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.317"
        app:srcCompat="@drawable/animalset" />

    <TextView
        android:id="@+id/editinfo_picturesettext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="캐릭터 선택"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.222" />

    <Spinner
        android:id="@+id/editinfo_countryspinner"
        android:layout_width="211dp"
        android:layout_height="45dp"
        android:background="#fff6af"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.527" />

    <FrameLayout
        android:id="@+id/editinfo_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="#ddd"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.606">

        <TextView
            android:id="@+id/editinfo_frameLayout_textView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text=" 캐릭터 선택 "
            android:textStyle="bold"
            android:textSize="30dp"
            android:background="#eee"
            android:textColor="#00f"
            android:layout_gravity="center|top"
            android:layout_marginTop="5dp"
            android:gravity="center"
            />

        <Button
            android:id="@+id/editinfo_frameLayout_closebutton"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="bottom|center"
            android:backgroundTint="#f00"
            android:text="닫 기"
            android:textSize="18dp"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/editinfo_catimage"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:layout_gravity="left|top"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/cat"
            />

        <ImageView
            android:id="@+id/editinfo_tigerimage"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:layout_gravity="right|top"
            android:layout_marginTop="70dp"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/tiger"
            />

        <ImageView
            android:id="@+id/editinfo_whaleimage"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="70dp"
            app:srcCompat="@drawable/whale"
            />

        <ImageView
            android:id="@+id/editinfo_giraffeimage"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="60dp"
            app:srcCompat="@drawable/giraffe"
            />

        <ImageView
            android:id="@+id/editinfo_elephantimage"
            android:layout_width="125dp"
            android:layout_height="180dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="15dp"
            app:srcCompat="@drawable/elephant"
            />

        <ImageView
            android:id="@+id/editinfo_pigimage"
            android:layout_width="125dp"
            android:layout_height="180dp"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/pig"
            />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>